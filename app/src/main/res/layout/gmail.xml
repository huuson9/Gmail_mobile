<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gmailCard"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/gmailImage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="30dp"
            >

            <ImageView
                android:id="@+id/gmailImageComponent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/meo1"
                tools:srcCompat="@drawable/_02c2a_8e9a35734afd4c37b61da779354c0968_mv2" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/gmailImage"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAPAKEN"
                android:id="@+id/title"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/gmailSummary"
                android:text="Con gái lai Nhật-Việt và ông bố người Nhật thử sức nấu ăn nhưng chỉ nói tiếng Việt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:id="@+id/gmailContent"
                android:text="日越ハーフの娘と日本人のパパ、ベトナム語だけで料理に挑戦 PPK：Hôm nay MI nấu gì? 今日みーちゃんは何を作るの？ Mi：Nấu Karaage (Gà rán) 唐揚げを作る PPK：Đúng rồi そう MI：PAPA ơi Làm như thế... "/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:50AM"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:outlineSpotShadowColor="@color/white"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_outline_24"
                app:tint="#555555" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>